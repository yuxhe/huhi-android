<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:chrome="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:paddingStart="15dip"
    android:paddingTop="8dip"
    android:paddingBottom="8dip"
    android:paddingEnd="15dip" >

    <ImageView android:id="@+id/huhi_sync_device_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/settings_desktop_view"
        android:layout_centerVertical="true"
        android:contentDescription="@string/huhi_sync_btn_mobile" />

    <TextView android:id="@+id/huhi_sync_device_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/modern_grey_700"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/huhi_sync_device_image"
        android:layout_toStartOf="@+id/huhi_sync_remove_device"
        android:paddingStart="10dip" />

    <android.support.v7.widget.AppCompatImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/huhi_sync_remove_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/ListItemEndIcon"
        android:contentDescription="@string/remove"
        android:src="@drawable/ic_delete_white_24dp"
        app:tint="@color/modern_grey_700"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
